   <children>
      <Label alignment="CENTER" prefHeight="45.0" prefWidth="506.0" style="-fx-font-size: 30px; -fx-padding: 7px; -fx-background-color: #EA5444; -fx-text-fill: #fff;" text="Change Password" />
      <GridPane hgap="5.0" layoutX="48.0" layoutY="108.0" vgap="7.0">
